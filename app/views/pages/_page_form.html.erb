<% form_for @page, :html => { :multipart => true }, :builder => TaggedBuilder do |f| %>
	<%= f.error_messages %>
	<div id="form_header"><h1><%= @header %></h1>
		<%= f.submit 'Save' %>
	</div>
	<%= f.text_field :name %>	
	<%= f.text_field :permalink %>
	<%= f.text_area :content %>
	<%= f.check_box :news %>
<% end %>