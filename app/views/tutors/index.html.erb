<h1>Listing tutors</h1>

<table>
  <tr>
	  <th></th>
		<th>Login</th>
    <th>Name</th>
    <th>Age</th>
    <th>Sex</th>
    <th>Flavour</th>
		<th></th>
  </tr>

<% @tutors.each do |tutor| %>
  <tr>
	  <td><%= image_tag tutor.photo.url(:small) %></td>
		<td><%=h tutor.login_name %></td>
    <td><%= highlight(tutor.name, tutor.familyname, :highlighter => '<span class="familyname">\1</span>') %></td>
    <td><%=h tutor.age %></td>
    <td><%=h tutor.sex %></td>
    <td><%=h tutor.flavour %></td>
    <td><%= link_to 'Show', tutor %>
<%= link_to 'Edit', edit_tutor_path(tutor) %>
<%= link_to 'Destroy', tutor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

