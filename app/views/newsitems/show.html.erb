<%= image_tag @newsitem.photo.url, :class => "large" %>
<h1><%=h @newsitem.title %></h1>
<% if signed_in? && current_user.admin? %>
	<% content_for :edit_this_page_button do %>
		<% link_to (edit_newsitem_path(@newsitem.id)) do %>
		  <div id="editbutton", class="extrabutton">
		  	<p>Edit this page</p>
		  </div>
		<% end %>
	<% end %>
<% end %>
<%= textilize @newsitem.English_content %>
