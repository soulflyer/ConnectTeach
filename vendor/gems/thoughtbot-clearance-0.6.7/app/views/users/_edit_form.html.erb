<% @stylesheet = "signin" %>
<% form_for @user, :builder => TaggedBuilder do |form| %>
	<%= form.error_messages %>
  <%= form.text_field :email %>
  <%= form.password_field :password %>
  <%= form.password_field :password_confirmation %>
	<% if session[:user_id] && User.find(session[:user_id]).admin? %>
    <%= form.text_field :role %>
  <% end %>
  <%= form.select :language, [['English', 'en'], ['Vietnamese', 'vn']] %>
	<%= form.submit 'Submit', :disable_with => 'Please wait...' %>
<% end %>