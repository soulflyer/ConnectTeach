<% @stylesheet = "signin" %>
<% form_for @user, :builder => TaggedBuilder do |form| %>
	<%= form.error_messages %>
  <%= form.text_field :email %>
  <%= form.password_field :password %>
  <%= form.password_field :password_confirmation %>
	<% if signed_in? && current_user.admin? %>
    <%= form.text_field :role %>
  <% end %>
  <p>
	  <%= form.label :language %>
    <%= form.select :language, [['English', 'en'], ['Vietnamese', 'vn']] %>
  </p>
	<%= form.submit 'Submit', :disable_with => 'Please wait...', :class => "form_submit_button" %>
<% end %>