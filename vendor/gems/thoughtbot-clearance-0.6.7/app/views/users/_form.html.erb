<% form_for @user, :builder => TaggedBuilder do |form| %>
	<%= form.error_messages %>
  <%= form.text_field :email %>
  <%= form.password_field :password %>
  <%= form.password_field :password_confirmation %>
  <p>
	  <%= form.label :language %>
    <%= form.select :language, [['English', 'en'], ['Vietnamese', 'vn']] %>
  </p>
	<%= form.submit 'Sign up', :disable_with => 'Please wait...', :class => "form_submit_button" %>
<% end %>